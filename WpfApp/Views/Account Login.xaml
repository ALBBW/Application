<Window x:Class="WpfApp.Account_Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Account Login" Height="309" Width="336" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Grid>
		<Label Content="Loginname" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
		<TextBox Name="txtb_loginalias" Width="300" Height="38" Margin="10,41,10,191" BorderThickness="1" BorderBrush="Black" MaxLength="50" MaxLines="1" FontSize="20" Tag="Loginnamen eingeben..."/>
		<Label Content="Passwort" HorizontalAlignment="Left" Margin="10,83,0,0" VerticalAlignment="Top"/>
		<PasswordBox Name="pwb_loginpassword" Width="300" Height="38" Margin="10,114,10,118" BorderThickness="1" BorderBrush="Black" MaxLength="50" FontSize="20" Tag="Passwort eingeben..."/>
		<TextBlock Name="lbl_warning" Text="" HorizontalAlignment="Stretch" Margin="10,175,10,0" Foreground="Red" Height="42" ScrollViewer.VerticalScrollBarVisibility="Disabled" TextWrapping="WrapWithOverflow" VerticalAlignment="Top"/>
		<Button Name="Btn_login" Content="Login" HorizontalAlignment="Left" Margin="10,222,0,0" VerticalAlignment="Top" Width="300" Height="38" FontSize="18"/>
	</Grid>
</Window>
